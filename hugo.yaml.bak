baseURL: "http://rafalgasinski.github.io/drogi-nieoczywiste/"
defaultContentLanguage: pl
title: Drogi Nieoczywiste
theme: PaperMod
pagination:
  pagerSize: 5

enableRobotsTXT: true
buildDrafts: false
buildFuture: false
buildExpired: false

googleAnalytics: UA-123-45

minify:
  disableXML: true
  minifyOutput: false

security:
  gotemplates:
    allowActionJSTmpl: true

outputs:
  home:
    - HTML
    - RSS
    - JSON

params:
  env: production
  title: Drogi Nieoczywiste
  description: "Drogi Nieoczywiste"
  keywords: [Blog, Portfolio, PaperMod]
  author: RG
  DateFormat: "January 2, 2006"
  defaultTheme: dark
  disableThemeToggle: false

  ShowReadingTime: true
  ShowShareButtons: true
  ShowPostNavLinks: true
  ShowBreadCrumbs: false
  ShowCodeCopyButtons: false
  disableSpecial1stPost: false
  disableScrollToTop: false
  comments: false
  hidemeta: false
  hideSummary: false
  showtoc: false
  tocopen: false

  assets:
    disableHLJS: true # to disable highlight.js
    # disableFingerprinting: true

  label:
      text: "Strona główna"
      icon: /apple-touch-icon.png
      iconHeight: 35

  # profile-mode
  profileMode:
    enabled: false # needs to be explicitly set
    title: ExampleSite
    subtitle: "This is subtitle"
    imageUrl: "<img location>"
    imageWidth: 120
    imageHeight: 120
    imageTitle: my image
    buttons:
      - name: Posty
        url: posty

  # home-info mode
  homeInfoParams:
    Title: "Drogi nieoczywiste \U0001F3DE"
    Content: Jedź własnymi ścieżkami
  socialIcons:
    - name: instagram
      url: "https://instagram.com/"

  analytics:
    google:
        SiteVerificationTag: "XYZabc"
    bing:
        SiteVerificationTag: "XYZabc"
    yandex:
        SiteVerificationTag: "XYZabc"

  cover:
    hidden: true # hide everywhere but not in structured data
    hiddenInList: true # hide on list pages and home
    hiddenInSingle: true # hide on single page

  # for search
  # https://fusejs.io/api/options.html
  fuseOpts:
      isCaseSensitive: false
      shouldSort: true
      location: 0
      distance: 1000
      threshold: 0.4
      minMatchCharLength: 0
      keys: ["title", "permalink", "summary", "content"]
menu:
    main:
        - identifier: posty
          name: posty
          url: /posts/
          weight: 10
        - identifier: zdjęcia
          name: zdjęcia
          url: https://www.icloud.com/photos/#/sharedalbums/
          weight: 10
        - identifier: mapa
          name: mapa
          url: https://www.google.com/maps/d/edit?mid=1SNt_gcj479aemPbpdQ3e3aUfJmzmbao&ll=47.62240390093096%2C19.569441499999982&z=7
          weight: 30
# Read: https://github.com/adityatelange/hugo-PaperMod/wiki/FAQs#using-hugos-syntax-highlighter-chroma
pygmentsUseClasses: false
markup:
    highlight:
        anchorLineNos: false
        codeFences: true
        guessSyntax: true
        lineNos: true
        style: base16-snazzy
        # noClasses: true
        tabWidth: 2
